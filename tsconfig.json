{
  "compilerOptions": {
    "target": "es2016",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "typeRoots": [
        "./src/@types",
        "./node_modules/@types"
      ]
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
